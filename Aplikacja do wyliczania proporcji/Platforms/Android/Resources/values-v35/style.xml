<?xml version="1.0" encoding="utf-8" ?>
<resources>
<style name="Maui.MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Ustaw przezroczyste tło okna -->
    <item name="android:windowBackground">@color/windowBackground</item>
      <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <!-- Ustaw przezroczysty pasek statusu -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <!-- Ustaw przezroczysty pasek nawigacyjny -->
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <!-- Włącz tryb pełnoekranowy -->
    <item name="android:windowFullscreen">true</item>
</style>

</resources>